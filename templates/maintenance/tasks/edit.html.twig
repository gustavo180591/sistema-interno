{% extends 'maintenance/base.html.twig' %}

{% block page_title %}Editar Tarea de Mantenimiento{% endblock %}

{% block page_actions %}
    <a href="{{ path('maintenance_maintenance_task_show', {'id': task.id}) }}" class="btn btn-sm btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Volver al detalle
    </a>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-edit me-1 text-primary"></i>
                Editar Tarea
            </h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-8">
                        {{ form_row(form.title, {
                            'label': 'Título',
                            'attr': {
                                'placeholder': 'Título de la tarea',
                                'class': 'form-control-lg'
                            }
                        }) }}

                        {{ form_row(form.description, {
                            'label': 'Descripción',
                            'attr': {
                                'rows': 4,
                                'placeholder': 'Detalles de la tarea de mantenimiento...'
                            }
                        }) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.category, {
                                    'label': 'Categoría',
                                    'placeholder': 'Seleccione una categoría'
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.assignedTo, {
                                    'label': 'Asignar a',
                                    'placeholder': 'Seleccione un usuario',
                                    'required': false
                                }) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.status, {
                                    'label': 'Estado',
                                    'placeholder': 'Seleccione un estado'
                                }) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.scheduledDate, {
                                    'label': 'Fecha Programada',
                                    'attr': {
                                        'class': 'js-datetime-picker',
                                        'data-enable-time': 'true',
                                        'data-date-format': 'Y-m-d H:i',
                                        'data-alt-input': 'true',
                                        'data-alt-format': 'd/m/Y H:i',
                                        'data-time_24hr': 'true'
                                    }
                                }) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <h6 class="card-title text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Información de la Tarea
                                </h6>

                                <div class="mb-3">
                                    <small class="text-muted">
                                        <strong>Estado:</strong> Actualice el estado según corresponda.
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <small class="text-muted">
                                        <strong>Fecha Programada:</strong> Ajuste la fecha y hora si es necesario.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('maintenance_maintenance_task_show', {'id': task.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Guardar cambios
                            </button>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const datePickers = document.querySelectorAll('.js-datetime-picker');
            datePickers.forEach(function(picker) {
                flatpickr(picker, {
                    enableTime: true,
                    dateFormat: "Y-m-d H:i",
                    time_24hr: true,
                    locale: "es",
                    minuteIncrement: 15
                });
            });
        });
    </script>
{% endblock %} 