{# Task Details for Calendar Modal #}
<div class="task-details">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">{{ task.title }}</h4>
        <span class="badge bg-{{ task.status == 'completed' ? 'success' : (task.isOverdue ? 'danger' : 'primary') }}">
            {{ task.status|trans }}
        </span>
    </div>
    
    <div class="mb-3">
        <div class="d-flex align-items-center text-muted mb-1">
            <i class="far fa-calendar-alt me-2"></i>
            <span>{{ task.scheduledDate|date('d/m/Y H:i') }}</span>
        </div>
        
        {% if task.completedAt %}
        <div class="d-flex align-items-center text-muted mb-1">
            <i class="far fa-check-circle me-2"></i>
            <span>Completada: {{ task.completedAt|date('d/m/Y H:i') }}</span>
        </div>
        {% endif %}
        
        {% if task.category %}
        <div class="d-flex align-items-center text-muted mb-1">
            <i class="fas fa-tag me-2"></i>
            <span>{{ task.category.name }}</span>
        </div>
        {% endif %}
        
        {% if task.assignedTo %}
        <div class="d-flex align-items-center text-muted mb-1">
            <i class="fas fa-user me-2"></i>
            <span>Asignada a: {{ task.assignedTo.fullName ?? task.assignedTo.username }}</span>
        </div>
        {% endif %}
        
    </div>
    
    {% if task.description %}
    <div class="card bg-light mb-3">
        <div class="card-body p-3">
            <h6 class="card-title text-muted">Descripci√≥n</h6>
            <p class="mb-0">{{ task.description|nl2br }}</p>
        </div>
    </div>
    {% endif %}
    
    {% if task.notes %}
    <div class="card bg-light mb-3">
        <div class="card-body p-3">
            <h6 class="card-title text-muted">Notas</h6>
            <p class="mb-0">{{ task.notes|nl2br }}</p>
        </div>
    </div>
    {% endif %}
    
    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
        <small class="text-muted">
            Creada el {{ task.createdAt|date('d/m/Y H:i') }}
        </small>
    </div>
</div>
