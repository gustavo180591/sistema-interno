{% extends 'base.html.twig' %}

{% block title %}Mantenimiento • Oficinas{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4"><i class="fas fa-building me-2"></i>Oficinas</h1>
        {% if is_granted('ROLE_AUDITOR') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('office_office_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Nueva oficina
            </a>
        {% endif %}
    </div>

    <!-- Search Box -->
    <div class="mb-4">
        <div class="input-group">
            <span class="input-group-text bg-white border-end-0">
                <i class="fas fa-search text-muted"></i>
            </span>
            <input type="text" 
                   id="officeSearch" 
                   class="form-control border-start-0" 
                   placeholder="Buscar oficina o área..."
                   style="box-shadow: none; border-left: 0 !important;">
        </div>
    </div>

    <div class="row g-3" id="officesContainer">
        {% for office in offices %}
            {% set institutionalCount = office.machines|filter(m => m.institutional)|length %}
            <div class="col-md-6 col-lg-4 office-card">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-1">{{ office.name }}</h5>
                        <div class="text-muted mb-2">{{ office.location ?? '—' }}</div>
                        <div class="d-flex align-items-center gap-3">
                            <span class="badge bg-primary">
                                {{ institutionalCount }} máquinas institucionales
                            </span>
                            <span class="badge bg-secondary">
                                {{ office.machines|length }} total (incluye personales)
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('office_office_show', {id: office.id}) }}" class="btn btn-sm btn-outline-primary">
                                Ver detalle
                            </a>
                            {% if is_granted('ROLE_AUDITOR') or is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('office_office_edit', {id: office.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info mb-0">No hay oficinas cargadas.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('officeSearch');
            const officesContainer = document.getElementById('officesContainer');
            const officeCards = officesContainer.getElementsByClassName('office-card');
            
            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                
                Array.from(officeCards).forEach(function(card) {
                    const title = card.querySelector('.card-title').textContent.toLowerCase();
                    const location = card.querySelector('.text-muted').textContent.toLowerCase();
                    
                    if (title.includes(searchTerm) || location.includes(searchTerm)) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
            
            // Add fade-in animation when filtering
            searchInput.addEventListener('keyup', function() {
                const visibleCards = Array.from(officeCards).filter(card => card.style.display !== 'none');
                visibleCards.forEach((card, index) => {
                    card.style.animation = `fadeIn 0.3s ease ${index * 0.05}s forwards`;
                    card.style.opacity = 0;
                });
            });
        });
    </script>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .office-card {
            transition: all 0.3s ease;
        }
        #officeSearch:focus {
            box-shadow: none !important;
            border-color: #ced4da !important;
        }
        .input-group-text {
            border-right: 0 !important;
        }
    </style>
{% endblock %}
