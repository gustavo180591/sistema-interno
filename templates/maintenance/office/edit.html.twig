{% extends 'base.html.twig' %}

{% block title %}Editar Oficina - {{ office.name }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h5 mb-0">Editar Oficina: {{ office.name }}</h1>
                        <div>
                            <a href="{{ path('office_office_show', {'id': office.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Volver
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'action': path('office_office_edit', {'id': office.id}) }) }}
                        <div class="mb-3">
                            {{ form_label(form.name, 'Nombre de la oficina', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.location, 'Ubicaci√≥n', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.location) }}
                            <div class="form-text">Ej: Piso 1, Oficina 101</div>
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('office_office_show', {'id': office.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
