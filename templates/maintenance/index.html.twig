{% extends 'base.html.twig' %}

{% block title %}Tareas de Mantenimiento{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-tools me-2"></i>Tareas de Mantenimiento
        </h1>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Herramientas de Administración</h5>
            <p class="text-muted">Utilice las siguientes herramientas para el mantenimiento del sistema.</p>
            
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="bg-light p-3 rounded-circle d-inline-flex mb-3">
                                <i class="fas fa-database fa-2x text-primary"></i>
                            </div>
                            <h5 class="card-title">Base de Datos</h5>
                            <p class="card-text text-muted small">Herramientas de mantenimiento de la base de datos</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Acceder</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="bg-light p-3 rounded-circle d-inline-flex mb-3">
                                <i class="fas fa-server fa-2x text-primary"></i>
                            </div>
                            <h5 class="card-title">Servidor</h5>
                            <p class="card-text text-muted small">Estado y configuración del servidor</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Ver estado</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="bg-light p-3 rounded-circle d-inline-flex mb-3">
                                <i class="fas fa-file-export fa-2x text-primary"></i>
                            </div>
                            <h5 class="card-title">Respaldos</h5>
                            <p class="card-text text-muted small">Gestión de copias de seguridad</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Crear respaldo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Estadísticas del Sistema</h5>
            <div class="row text-center">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="h2 mb-1">0</div>
                    <div class="text-muted small">Tareas pendientes</div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="h2 mb-1">0</div>
                    <div class="text-muted small">Errores recientes</div>
                </div>
                <div class="col-md-4">
                    <div class="h2 mb-1">100%</div>
                    <div class="text-muted small">Disponibilidad</div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
