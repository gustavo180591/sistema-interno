{% extends 'base.html.twig' %}

{% block title %}Mi Perfil{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 720px;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>ðŸ‘¤ Mi Perfil</h1>
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#editProfileForm" aria-expanded="false" aria-controls="editProfileForm">
      <i class="bi bi-pencil-square me-1"></i> Editar Perfil
    </button>
  </div>

  {% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{ message }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {% endfor %}

  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <h5 class="text-muted mb-3">InformaciÃ³n Personal</h5>
          <p><strong>Nombre:</strong> {{ app.user.nombre ?? 'No especificado' }}</p>
          <p><strong>Apellido:</strong> {{ app.user.apellido ?? 'No especificado' }}</p>
        </div>
        <div class="col-md-6 mb-3">
          <h5 class="text-muted mb-3">Datos de Cuenta</h5>
          <p><strong>Email:</strong> {{ app.user.email }}</p>
          <p><strong>Rol(es):</strong> {{ app.user.roles|map(r => r|replace({'ROLE_': ''})|lower|capitalize)|join(', ') }}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Formulario de EdiciÃ³n (inicialmente oculto) -->
  <div class="collapse" id="editProfileForm">
    <div class="card">
      <div class="card-header bg-light">
        <h5 class="mb-0">Editar InformaciÃ³n</h5>
      </div>
      <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
          <div class="row">
            <div class="col-md-6 mb-3">
              {{ form_row(form.nombre) }}
            </div>
            <div class="col-md-6 mb-3">
              {{ form_row(form.apellido) }}
            </div>
          </div>
          {{ form_row(form.email) }}
          {{ form_row(form.plainPassword) }}
          
          <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
            <button type="button" class="btn btn-outline-secondary me-md-2" data-bs-toggle="collapse" data-bs-target="#editProfileForm" aria-expanded="false">
              Cancelar
            </button>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-save me-1"></i> Guardar Cambios
            </button>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
