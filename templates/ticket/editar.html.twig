{% extends 'base.html.twig' %}

{% block title %}Editar Ticket #{{ ticket.ticketId }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('ticket_lista') }}">Tickets</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('ticket_show', {'id': ticket.id}) }}">#{{ ticket.ticketId }}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Editar</li>
                        </ol>
                    </nav>
                    <h1 class="h3 mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Editar Ticket #{{ ticket.ticketId }}
                    </h1>
                </div>
            </div>

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Editar Ticket #{{ ticket.ticketId }}
                    </h5>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'needs-validation' } }) }}
                    
                    <div class="row g-4">
                        <!-- Primera columna -->
                        <div class="col-md-6">
                            <!-- ID de Ticket -->
                            <div class="mb-4">
                                {{ form_label(form.ticketId, 'ID de Ticket', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-tag"></i>
                                    </span>
                                    {{ form_widget(form.ticketId, {
                                        'attr': {
                                            'class': 'form-control form-control-lg rounded-end',
                                            'placeholder': 'Ej: ABC-123',
                                            'oninput': 'this.value = this.value.toUpperCase()'
                                        }
                                    }) }}
                                </div>
                                {{ form_errors(form.ticketId) }}
                            </div>

                            <!-- Área de Origen -->
                            <div class="mb-4">
                                {{ form_label(form.departamento, 'Área de Origen', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-building"></i>
                                    </span>
                                    {{ form_widget(form.departamento, {
                                        'attr': {
                                            'class': 'form-select form-select-lg',
                                            'data-choices': 'true',
                                            'data-search-enabled': 'true'
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Seleccione el área de origen de la Municipalidad de Posadas
                                </div>
                                {{ form_errors(form.departamento) }}
                            </div>
                            
                            <!-- Estado -->
                            {% if form.estado is defined %}
                            <div class="mb-4">
                                {{ form_label(form.estado, 'Estado del Ticket', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-list-check"></i>
                                    </span>
                                    {{ form_widget(form.estado, {
                                        'attr': {
                                            'class': 'form-select form-select-lg',
                                            'data-choices': 'true'
                                        }
                                    }) }}
                                </div>
                                {{ form_errors(form.estado) }}
                            </div>
                            {% endif %}
                        </div>

                        <!-- Segunda columna -->
                        <div class="col-md-6">
                            <!-- Solicitud / Pedido -->
                            <div class="mb-4">
                                {{ form_label(form.pedido, 'Solicitud / Pedido', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light align-items-start pt-3">
                                        <i class="bi bi-chat-square-text"></i>
                                    </span>
                                    {{ form_widget(form.pedido, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'Describa el pedido o solicitud...',
                                            'rows': 4,
                                            'style': 'min-height: 100px; resize: vertical;'
                                        }
                                    }) }}
                                </div>
                                {{ form_errors(form.pedido) }}
                            </div>

                            <!-- Descripción -->
                            <div class="mb-4">
                                {{ form_label(form.descripcion, 'Descripción', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light align-items-start pt-3">
                                        <i class="bi bi-chat-left-dots"></i>
                                    </span>
                                    {{ form_widget(form.descripcion, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'Describa detalladamente el trabajo...',
                                            'rows': 4,
                                            'style': 'min-height: 100px; resize: vertical;'
                                        }
                                    }) }}
                                </div>
                                {{ form_errors(form.descripcion) }}
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left"></i> Volver al ticket
                        </a>
                        <div class="d-flex gap-3">
                            <button type="reset" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-counterclockwise"></i> Restaurar
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Estilos para el select de departamentos agrupados */
.form-select optgroup {
    font-weight: bold;
    color: #6c757d;
    background-color: #f8f9fa;
    padding: 8px 12px;
    border-bottom: 1px solid #dee2e6;
}

.form-select optgroup option {
    font-weight: normal;
    color: #495057;
    background-color: white;
    padding: 8px 20px;
}

.form-select optgroup option:hover {
    background-color: #e9ecef;
}

/* Mejoras para el select con Choices.js */
.choices__group {
    font-weight: bold;
    color: #6c757d;
    background-color: #f8f9fa;
    padding: 8px 12px;
    border-bottom: 1px solid #dee2e6;
}

.choices__item {
    padding: 8px 20px;
}

.choices__item--selectable:hover {
    background-color: #e9ecef;
}

/* Estilos para el placeholder */
.form-select option[value=""] {
    color: #6c757d;
    font-style: italic;
}

/* Mejoras visuales para el formulario */
.form-label.fw-bold {
    color: #495057;
    margin-bottom: 0.5rem;
}

.input-group-text {
    border-right: none;
}

.form-control, .form-select {
    border-left: none;
}

.form-control:focus, .form-select:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

/* Animaciones suaves */
.form-control, .form-select, .btn {
    transition: all 0.2s ease-in-out;
}

/* Estilos para el botón de guardar */
.btn-primary {
    background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
    border: none;
    box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
}

/* Estilos para los campos de texto */
textarea.form-control {
    border-radius: 0.375rem;
    border: 1px solid #ced4da;
}

textarea.form-control:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

/* Estilos para el breadcrumb */
.breadcrumb-item + .breadcrumb-item::before {
    content: ">";
    color: #6c757d;
}

.breadcrumb-item a {
    color: #0d6efd;
    text-decoration: none;
}

.breadcrumb-item a:hover {
    text-decoration: underline;
}
</style>
{% endblock %}
