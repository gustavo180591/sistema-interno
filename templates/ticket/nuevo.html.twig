{% extends 'base.html.twig' %}

{% block title %}Nuevo Ticket de Soporte{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                <!-- Encabezado con degradado -->
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <div class="d-flex align-items-center">
                        <a href="{{ path('ticket_lista') }}" class="btn btn-outline-light btn-sm me-3">
                            <i class="bi bi-arrow-left"></i>
                        </a>
                        <div>
                            <h1 class="h5 mb-0 fw-bold"><i class="bi bi-ticket-detailed me-2"></i>Nuevo Ticket de Soporte</h1>
                            <small class="opacity-75">Complete el formulario para registrar una nueva solicitud</small>
                        </div>
                    </div>
                </div>

                <!-- Cuerpo del formulario -->
                <div class="card-body p-4">
                    <!-- Mensajes flash -->
                    <div class="mb-4">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'error' ? 'danger' : 'info') }} alert-dismissible fade show mb-3" role="alert">
                                    <div class="d-flex align-items-center">
                                        <i class="bi {{ label == 'success' ? 'bi-check-circle-fill' : (label == 'error' ? 'bi-exclamation-triangle-fill' : 'bi-info-circle-fill') }} me-2"></i>
                                        <div>{{ message }}</div>
                                    </div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>

                    {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'needs-validation' } }) }}
                    
                    <div class="row g-4">
                        <!-- Primera columna -->
                        <div class="col-lg-6">
                            <!-- ID de Ticket -->
                            <div class="mb-4">
                                {{ form_label(form.ticketId, 'ID de Ticket', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-tag"></i>
                                    </span>
                                    {{ form_widget(form.ticketId, {
                                        'attr': {
                                            'class': 'form-control form-control-lg rounded-end',
                                            'placeholder': 'Ej: ABC-123',
                                            'oninput': 'this.value = this.value.toUpperCase()',
                                            'autofocus': true
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">Código único para identificar el ticket</div>
                                {{ form_errors(form.ticketId) }}
                            </div>

                            <!-- Área de Origen con buscador -->
                            <div class="mb-4">
                                {{ form_label(form.departamento, 'Área de Origen', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    {{ form_widget(form.departamento, {
                                        'attr': {
                                            'class': 'form-select form-select-lg select2-search',
                                            'data-placeholder': 'Buscar área de origen...',
                                            'data-allow-clear': 'true'
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Escriba para buscar el área de origen
                                </div>
                                {{ form_errors(form.departamento) }}
                            </div>
                            
                            <!-- Estado (si existe) -->
                            {% if form.estado is defined %}
                            <div class="mb-4">
                                {{ form_label(form.estado, 'Estado del Ticket', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-list-check"></i>
                                    </span>
                                    {{ form_widget(form.estado, {
                                        'attr': {
                                            'class': 'form-select form-select-lg',
                                            'data-choices': 'true'
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">Seleccione el estado actual del ticket</div>
                                {{ form_errors(form.estado) }}
                            </div>
                            {% endif %}

                            <!-- Fecha/Hora -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Fecha y Hora</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-calendar3"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control form-control-lg" 
                                           value="{{ 'now'|date('d/m/Y H:i', 'America/Argentina/Buenos_Aires') }}" 
                                           readonly>
                                </div>
                                <div class="form-text text-muted">Se registra automáticamente al crear el ticket</div>
                            </div>
                        </div>

                        <!-- Segunda columna -->
                        <div class="col-lg-6">
                            <!-- Solicitud / Pedido -->
                            <div class="mb-4">
                                {{ form_label(form.pedido, 'Solicitud / Pedido', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light align-items-start pt-3">
                                        <i class="bi bi-chat-left-dots"></i>
                                    </span>
                                    {{ form_widget(form.pedido, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'Describa el pedido o solicitud...',
                                            'rows': 4,
                                            'style': 'min-height: 100px; max-height: 200px; resize: vertical; overflow-y: auto;',
                                            'oninput': 'this.style.height = "auto"; this.style.height = (this.scrollHeight > 200 ? "200px" : this.scrollHeight + "px");'
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Describa su solicitud con el mayor detalle posible
                                </div>
                                {{ form_errors(form.pedido) }}
                            </div>

                            <!-- Descripción -->
                            <div class="mb-4">
                                {{ form_label(form.descripcion, 'Descripción', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.descripcion, {
                                    'attr': {
                                        'class': 'form-control w-100',
                                        'rows': 5,
                                        'style': 'width: 100% !important;',
                                        'placeholder': 'Ingrese aquí la descripción detallada del trabajo o solicitud...',
                                        'data-controller': 'textarea-autogrow'
                                    }
                                }) }}
                                <div class="form-text text-muted">
                                    <i class="bi bi-card-text me-1"></i>
                                    Describa con detalle el trabajo o solicitud que se está realizando
                                </div>
                                {{ form_errors(form.descripcion) }}
                            </div>
                        </div>
                    </div>

                    <div class="sticky-bottom bg-white py-3 border-top mt-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <button type="reset" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-counterclockwise me-2"></i> Limpiar formulario
                                </button>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="{{ path('ticket_lista') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-lg me-1"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="bi bi-save me-2"></i> Guardar Ticket
                                </button>
                            </div>
                        </div>
                        <div class="text-muted small mt-2 text-end">
                            <i class="bi bi-keyboard"></i> Atajo: <kbd>Ctrl</kbd> + <kbd>Enter</kbd> para guardar
                        </div>
                    </div>

                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
</div>
  </div>
</div>

{# Atajo Ctrl+Enter y focus suave #}
<script>
  (function () {
    const form = document.querySelector('form.needs-validation');
    const desc = document.querySelector('textarea[name$="[descripcion]"]');
    if (desc) {
      desc.addEventListener('keydown', function (e) {
        if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
          form?.submit();
        }
      });
    }
  })();
</script>

<style>
/* Estilos para el select de departamentos agrupados */
.form-select optgroup {
    font-weight: bold;
    color: #6c757d;
    background-color: #f8f9fa;
    padding: 8px 12px;
    border-bottom: 1px solid #dee2e6;
}

.form-select optgroup option {
    font-weight: normal;
    color: #495057;
    background-color: white;
    padding: 8px 20px;
}

.form-select optgroup option:hover {
    background-color: #e9ecef;
}

/* Mejoras para el select con Choices.js */
.choices__group {
    font-weight: bold;
    color: #6c757d;
    background-color: #f8f9fa;
    padding: 8px 12px;
    border-bottom: 1px solid #dee2e6;
}

.choices__item {
    padding: 8px 20px;
}

.choices__item--selectable:hover {
    background-color: #e9ecef;
}

/* Estilos para el placeholder */
.form-select option[value=""] {
    color: #6c757d;
    font-style: italic;
}

/* Mejoras visuales para el formulario */
.form-label.fw-bold {
    color: #495057;
    margin-bottom: 0.5rem;
}

.input-group-text {
    border-right: none;
}

.form-control, .form-select {
    border-left: none;
}

.form-control:focus, .form-select:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

/* Animaciones suaves */
.form-control, .form-select, .btn {
    transition: all 0.2s ease-in-out;
}

/* Estilos para el botón de guardar */
.btn-primary {
    background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
    border: none;
    box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
}

/* Estilos para los campos de texto */
textarea.form-control {
    border-radius: 0.375rem;
    border: 1px solid #ced4da;
}

textarea.form-control:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}
</style>
{% endblock %}
