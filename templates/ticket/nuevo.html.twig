{% extends 'base.html.twig' %}

{% block title %}Nuevo Ticket de Soporte{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- Encabezado con degradado -->
                <div class="card-header bg-primary bg-gradient text-white py-4">
                    <div class="text-center">
                        <h1 class="h3 mb-2">游늶 Nuevo Ticket de Soporte</h1>
                        <p class="mb-0 opacity-75">Completa los campos para registrar tu solicitud</p>
                    </div>
                </div>

                <!-- Cuerpo del formulario -->
                <div class="card-body p-4 p-md-5">
                    {# Mensajes flash #}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'success' ? 'success' : (label == 'error' ? 'danger' : 'info') }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {{ form_start(form, { attr: { novalidate: 'novalidate', class: 'needs-validation' } }) }}
                    
                    <div class="row g-4">
                        <!-- Primera columna -->
                        <div class="col-md-6">
                            <!-- ID de Ticket -->
                            <div class="mb-4">
                                {{ form_label(form.ticketId, 'ID de Ticket', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-tag"></i>
                                    </span>
                                    {{ form_widget(form.ticketId, {
                                        'attr': {
                                            'class': 'form-control form-control-lg rounded-end',
                                            'placeholder': 'Ej: ABC-123',
                                            'oninput': 'this.value = this.value.toUpperCase()',
                                            'autofocus': true
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">C칩digo 칰nico para identificar el ticket</div>
                                {{ form_errors(form.ticketId) }}
                            </div>

                            <!-- 츼rea de Origen -->
                            <div class="mb-4">
                                {{ form_label(form.departamento, '츼rea de Origen', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-building"></i>
                                    </span>
                                    {{ form_widget(form.departamento, {
                                        'attr': {
                                            'class': 'form-select form-select-lg',
                                            'data-choices': 'true',
                                            'data-search-enabled': 'true',
                                            'data-placeholder': 'Seleccionar 치rea de origen...'
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Seleccione el 치rea de origen de la Municipalidad de Posadas
                                </div>
                                {{ form_errors(form.departamento) }}
                            </div>
                            
                            <!-- Estado (si existe) -->
                            {% if form.estado is defined %}
                            <div class="mb-4">
                                {{ form_label(form.estado, 'Estado del Ticket', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-list-check"></i>
                                    </span>
                                    {{ form_widget(form.estado, {
                                        'attr': {
                                            'class': 'form-select form-select-lg',
                                            'data-choices': 'true'
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">Seleccione el estado actual del ticket</div>
                                {{ form_errors(form.estado) }}
                            </div>
                            {% endif %}

                            <!-- Fecha/Hora -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Fecha y Hora</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-calendar3"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control form-control-lg" 
                                           value="{{ 'now'|date('d/m/Y H:i', 'America/Argentina/Buenos_Aires') }}" 
                                           readonly>
                                </div>
                                <div class="form-text text-muted">Se registra autom치ticamente al crear el ticket</div>
                            </div>
                        </div>

                        <!-- Segunda columna -->
                        <div class="col-md-6">
                            <!-- Solicitud / Pedido -->
                            <div class="mb-4">
                                {{ form_label(form.pedido, 'Solicitud / Pedido', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light align-items-start pt-3">
                                        <i class="bi bi-chat-square-text"></i>
                                    </span>
                                    {{ form_widget(form.pedido, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'Describa el pedido o solicitud con el mayor detalle posible...',
                                            'rows': 5,
                                            'data-controller': 'textarea-autogrow',
                                            'style': 'min-height: 120px; resize: vertical;'
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">Describa con detalle lo que se est치 solicitando</div>
                                {{ form_errors(form.pedido) }}
                            </div>

                            <!-- Nuestra respuesta / Comentarios -->
                            <div class="mb-4">
                                {{ form_label(form.descripcion, 'Nuestra respuesta / Comentarios', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light align-items-start pt-3">
                                        <i class="bi bi-chat-left-dots"></i>
                                    </span>
                                    {{ form_widget(form.descripcion, {
                                        'attr': {
                                            'class': 'form-control form-control-lg',
                                            'placeholder': 'Ingrese aqu칤 nuestra respuesta o comentarios sobre el pedido...',
                                            'rows': 5,
                                            'data-controller': 'textarea-autogrow',
                                            'style': 'min-height: 120px; resize: vertical;'
                                        }
                                    }) }}
                                </div>
                                <div class="form-text text-muted">Registre aqu칤 la respuesta o comentarios sobre el pedido realizado</div>
                                {{ form_errors(form.descripcion) }}
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('ticket_lista') }}" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left"></i> Volver al listado
                        </a>
                        <div class="d-flex gap-3">
                            <button type="reset" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-counterclockwise"></i> Limpiar
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                                <i class="bi bi-save"></i> Guardar Ticket
                            </button>
                        </div>
                    </div>

                    <div class="text-muted small mt-4 text-center">
                        <i class="bi bi-keyboard"></i> Atajo: <kbd>Ctrl</kbd> + <kbd>Enter</kbd> para guardar (con foco en cualquier campo)
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
  </div>
</div>

{# Atajo Ctrl+Enter y focus suave #}
<script>
  (function () {
    const form = document.querySelector('form.needs-validation');
    const desc = document.querySelector('textarea[name$="[descripcion]"]');
    if (desc) {
      desc.addEventListener('keydown', function (e) {
        if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
          form?.submit();
        }
      });
    }
  })();
</script>

<style>
/* Estilos para el select de departamentos agrupados */
.form-select optgroup {
    font-weight: bold;
    color: #6c757d;
    background-color: #f8f9fa;
    padding: 8px 12px;
    border-bottom: 1px solid #dee2e6;
}

.form-select optgroup option {
    font-weight: normal;
    color: #495057;
    background-color: white;
    padding: 8px 20px;
}

.form-select optgroup option:hover {
    background-color: #e9ecef;
}

/* Mejoras para el select con Choices.js */
.choices__group {
    font-weight: bold;
    color: #6c757d;
    background-color: #f8f9fa;
    padding: 8px 12px;
    border-bottom: 1px solid #dee2e6;
}

.choices__item {
    padding: 8px 20px;
}

.choices__item--selectable:hover {
    background-color: #e9ecef;
}

/* Estilos para el placeholder */
.form-select option[value=""] {
    color: #6c757d;
    font-style: italic;
}

/* Mejoras visuales para el formulario */
.form-label.fw-bold {
    color: #495057;
    margin-bottom: 0.5rem;
}

.input-group-text {
    border-right: none;
}

.form-control, .form-select {
    border-left: none;
}

.form-control:focus, .form-select:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

/* Animaciones suaves */
.form-control, .form-select, .btn {
    transition: all 0.2s ease-in-out;
}

/* Estilos para el bot칩n de guardar */
.btn-primary {
    background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
    border: none;
    box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
}

/* Estilos para los campos de texto */
textarea.form-control {
    border-radius: 0.375rem;
    border: 1px solid #ced4da;
}

textarea.form-control:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}
</style>
{% endblock %}
