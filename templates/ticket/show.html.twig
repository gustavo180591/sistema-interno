                                <div class="info-content">
                                    <div class="info-label">Área de Origen</div>
                                    <div class="info-value">{{ ticket.areaOrigen ?: 'No especificada' }}</div>
                                </div>
                            </div>
                            {% if is_granted('ROLE_AUDITOR') or is_granted('ROLE_ADMIN') %}
                            <div class="info-item">
