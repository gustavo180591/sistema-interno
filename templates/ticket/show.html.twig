                    <small class="text-muted">{{ user.email }}</small>
                    <span class="badge bg-{{ 'ROLE_AUDITOR' in user.roles ? 'info' : 'secondary' }} ms-2">
                      {{ 'ROLE_AUDITOR' in user.roles ? 'Auditor' : 'Usuario' }}
                    </span>
                  </div>
                </label>
              {% endfor %}
