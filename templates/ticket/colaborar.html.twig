{% extends 'base.html.twig' %}

{% block title %}Unirse como colaborador - {{ ticket.ticketId }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">
                            <i class="bi bi-people me-2"></i>Unirse como colaborador
                        </h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info">
                        <div class="d-flex">
                            <i class="bi bi-info-circle-fill me-3 mt-1"></i>
                            <div>
                                <h5 class="alert-heading">¡Ticket existente encontrado!</h5>
                                <p class="mb-0">El ID de ticket <strong>#{{ ticket.ticketId }}</strong> ya existe en el sistema. 
                                ¿Deseas unirte como colaborador de este ticket?</p>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Detalles del Ticket</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Estado:</strong> 
                                        <span class="badge bg-{{ ticket.estado == 'pendiente' ? 'warning' : (ticket.estado == 'en proceso' ? 'primary' : (ticket.estado == 'terminado' ? 'success' : 'danger')) }}">
                                            {{ ticket.estado|title }}
                                        </span>
                                    </p>
                                    <p class="mb-2"><strong>Departamento:</strong> {{ ticket.departamento }}</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Creado por:</strong> {{ ticket.createdBy.nombre }} {{ ticket.createdBy.apellido }}</p>
                                    <p class="mb-0"><strong>Fecha de creación:</strong> {{ ticket.createdAt|date('d/m/Y H:i') }}</p>
                                </div>
                            </div>
                            <div class="mt-3">
                                <p class="mb-1"><strong>Descripción:</strong></p>
                                <p class="text-muted">{{ ticket.descripcion }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('ticket_nuevo') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Volver al formulario
                        </a>
                        <form method="post" action="{{ path('ticket_colaborar', {'id': ticket.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('colaborar' ~ ticket.id) }}">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-people me-1"></i> Unirse como colaborador
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
