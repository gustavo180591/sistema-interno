{% extends 'base.html.twig' %}

{% block title %}Mi Historial de Tickets{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Dashboard Stats -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="d-flex flex-column align-items-center">
                                <div class="display-6 text-primary mb-2">{{ totalItems }}</div>
                                <div class="text-muted">Total de Tickets</div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-flex flex-column align-items-center">
                                <div class="display-6 text-warning mb-2">
                                    {{ tickets|filter(t => t.estado == 'pendiente')|length }}
                                </div>
                                <div class="text-muted">Pendientes</div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-flex flex-column align-items-center">
                                <div class="display-6 text-info mb-2">
                                    {{ tickets|filter(t => t.estado == 'en proceso')|length }}
                                </div>
                                <div class="text-muted">En Proceso</div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-flex flex-column align-items-center">
                                <div class="display-6 text-success mb-2">
                                    {{ tickets|filter(t => t.estado == 'terminado')|length }}
                                </div>
                                <div class="text-muted">Terminados</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Header with Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                 Mi Historial de Tickets
            </h1>
            <p class="text-muted mb-0">
                Historial completo de todos los tickets que has creado en el sistema
            </p>
            <small class="text-muted">
                <i class="bi bi-person-circle me-1"></i>
                {{ user.nombre }} {{ user.apellido }} ({{ user.email }})
            </small>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('ticket_nuevo') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Nuevo Ticket
            </a>
            <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosPanel" aria-expanded="false" aria-controls="filtrosPanel">
                <i class="bi bi-funnel me-1"></i> Filtros
            </button>
            <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Volver al Perfil
            </a>
        </div>
    </div>

    <!-- Advanced Filters Panel -->
    <div class="collapse mb-4" id="filtrosPanel">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-0">
                <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtros Avanzados</h6>
            </div>
            <div class="card-body">
                {{ form_start(filter_form, {'method': 'GET', 'attr': {'class': 'row g-3', 'id': 'filterForm'}}) }}
                    <div class="col-md-4">
                        <label class="form-label small text-muted mb-1">B煤squeda</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            {{ form_widget(filter_form.search, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Buscar por ID, pedido o descripci贸n...',
                                'id': 'searchInput'
                            }}) }}
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label small text-muted mb-1">Estado</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            {{ form_widget(filter_form.estado, {'attr': {
                                'class': 'form-select',
                                'data-control': 'select2'
                            }}) }}
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label small text-muted mb-1">rea</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                            {{ form_widget(filter_form.departamento, {'attr': {
                                'class': 'form-select',
                                'data-control': 'select2'
                            }}) }}
                        </div>
                    </div>

                    <div class="col-md-5">
                        <label class="form-label small text-muted mb-1">Rango de fechas</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                            {{ form_widget(filter_form.fechaDesde, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Desde',
                                'autocomplete': 'off'
                            }}) }}
                            <span class="input-group-text">hasta</span>
                            {{ form_widget(filter_form.fechaHasta, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Hasta',
                                'autocomplete': 'off'
                            }}) }}
                        </div>
                    </div>

                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" name="{{ filter_form.buscar.vars.full_name }}" class="btn btn-primary w-100">
                            <i class="bi bi-search me-1"></i> Buscar
                        </button>
                    </div>

                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" name="{{ filter_form.limpiar.vars.full_name }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i> Limpiar Filtros
                            </button>
                        </div>
                    </div>
                {{ form_end(filter_form) }}
            </div>
        </div>
    </div>

    <!-- Table View -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                    <i class="bi bi-table me-2"></i>
                    Resultados ({{ totalItems }} tickets encontrados)
                </h6>
                <div class="d-flex gap-2">
                    <small class="text-muted">
                        P谩gina {{ currentPage }} de {{ totalPages }}
                    </small>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="border-0">
                                <a href="{{ path('ticket_historial_usuario', {'sort_by': 'id', 'sort_order': sortState.currentSort == 'id' and sortState.currentOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" class="text-decoration-none text-dark">
                                    ID
                                    {% if sortState.currentSort == 'id' %}
                                        <i class="bi bi-arrow-{{ sortState.currentOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                    {% endif %}
                                </a>
                            </th>
                            <th class="border-0">Ticket ID</th>
                            <th class="border-0">rea</th>
                            <th class="border-0">Estado</th>
                            <th class="border-0">
                                <a href="{{ path('ticket_historial_usuario', {'sort_by': 'createdAt', 'sort_order': sortState.currentSort == 'createdAt' and sortState.currentOrder == 'ASC' ? 'DESC' : 'ASC'}) }}" class="text-decoration-none text-dark">
                                    Fecha Creaci贸n
                                    {% if sortState.currentSort == 'createdAt' %}
                                        <i class="bi bi-arrow-{{ sortState.currentOrder == 'ASC' ? 'up' : 'down' }}"></i>
                                    {% endif %}
                                </a>
                            </th>
                            <th class="border-0">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ticket in tickets %}
                            <tr class="ticket-row" data-ticket-id="{{ ticket.id }}">
                                <td class="align-middle">
                                    <span class="badge bg-primary rounded-pill">#{{ ticket.id }}</span>
                                </td>
                                <td class="align-middle">
                                    <code class="text-muted">{{ ticket.ticketId }}</code>
                                </td>
                                <td class="align-middle">
                                    <div class="d-flex flex-column">
                                        <span class="badge rounded-pill bg-light text-dark department-badge">
                                            {% if ticket.departamento == 1 %}
                                                <i class="bi bi-building me-1"></i> Presidencia
                                            {% elseif ticket.departamento == 2 %}
                                                <i class="bi bi-file-earmark-text me-1"></i> Secretar铆a
                                            {% elseif ticket.departamento == 3 %}
                                                <i class="bi bi-journal-text me-1"></i> Prosecretaria Legislativa
                                            {% elseif ticket.departamento == 4 %}
                                                <i class="bi bi-gear me-1"></i> Prosecretaria Administrativa
                                            {% elseif ticket.departamento == 8 %}
                                                <i class="bi bi-pc-display me-1"></i> Gesti贸n y TIC
                                            {% elseif ticket.departamento == 9 %}
                                                <i class="bi bi-people me-1"></i> Desarrollo Humano
                                            {% elseif ticket.departamento == 10 %}
                                                <i class="bi bi-person-badge me-1"></i> Personal
                                            {% elseif ticket.departamento == 11 %}
                                                <i class="bi bi-people me-1"></i> RR.HH
                                            {% elseif ticket.departamento == 12 %}
                                                <i class="bi bi-shield-check me-1"></i> Asuntos Jur铆dicos
                                            {% elseif ticket.departamento == 13 %}
                                                <i class="bi bi-calculator me-1"></i> Contabilidad y Presupuesto
                                            {% elseif ticket.departamento == 14 %}
                                                <i class="bi bi-cash-stack me-1"></i> Liquidaci贸n de Sueldos
                                            {% elseif ticket.departamento == 15 %}
                                                <i class="bi bi-box-seam me-1"></i> Abastecimiento
                                            {% elseif ticket.departamento == 16 %}
                                                <i class="bi bi-heart me-1"></i> Salud Mental
                                            {% elseif ticket.departamento == 17 %}
                                                <i class="bi bi-tools me-1"></i> Obras e Infraestructura
                                            {% elseif ticket.departamento == 18 %}
                                                <i class="bi bi-megaphone me-1"></i> RR.PP y Ceremonial
                                            {% elseif ticket.departamento == 19 %}
                                                <i class="bi bi-book me-1"></i> Digesto Jur铆dico
                                            {% elseif ticket.departamento == 20 %}
                                                <i class="bi bi-newspaper me-1"></i> Prensa
                                            {% elseif ticket.departamento >= 47 and ticket.departamento <= 60 %}
                                                <i class="bi bi-person-circle me-1"></i> Concejal
                                            {% else %}
                                                <i class="bi bi-building me-1"></i> {{ ticket.departamentoNombre|default('Otro') }}
                                            {% endif %}
                                        </span>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    {% set statusColors = {
                                        'pendiente': 'warning',
                                        'en proceso': 'info',
                                        'terminado': 'success',
                                        'rechazado': 'danger'
                                    } %}
                                    {% set statusIcons = {
                                        'pendiente': 'clock',
                                        'en proceso': 'arrow-repeat',
                                        'terminado': 'check-circle',
                                        'rechazado': 'x-circle'
                                    } %}
                                    
                                    <div class="dropdown d-flex flex-column align-items-center">
                                        <button class="btn btn-sm p-0 border-0 bg-transparent dropdown-toggle" type="button" id="statusDropdown{{ ticket.id }}" data-bs-toggle="dropdown" aria-expanded="false">
                                            <span class="badge bg-{{ statusColors[ticket.estado]|default('secondary') }} rounded-pill px-3 py-2">
                                                <i class="bi bi-{{ statusIcons[ticket.estado]|default('question-circle') }} me-1"></i>
                                                {{ ticket.estado|capitalize }}
                                            </span>
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="statusDropdown{{ ticket.id }}">
                                            {% for estado, color in statusColors %}
                                                <li>
                                                    <form method="post" action="{{ path('ticket_cambiar_estado', { id: ticket.id }) }}" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('cambiar_estado_' ~ ticket.id) }}">
                                                        <input type="hidden" name="estado" value="{{ estado }}">
                                                        <button type="submit" class="dropdown-item d-flex align-items-center {{ ticket.estado == estado ? 'active' : '' }}">
                                                            <span class="badge bg-{{ color }} me-2"></span>
                                                            {{ estado|capitalize }}
                                                            {% if ticket.estado == estado %}
                                                                <i class="bi bi-check2 ms-auto"></i>
                                                            {% endif %}
                                                        </button>
                                                    </form>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </td>
                                <td class="date-column">
                                    <div class="d-flex flex-column">
                                        <div class="fw-medium">{{ ticket.createdAt|date('d/m/Y') }}</div>
                                        <div class="text-muted small">{{ ticket.createdAt|date('H:i') }}</div>
                                        {% if ticket.updatedAt is defined and ticket.updatedAt is not null and ticket.updatedAt|date('Y-m-d H:i') != ticket.createdAt|date('Y-m-d H:i') %}
                                            <div class="text-muted small" data-bs-toggle="tooltip" title="ltima actualizaci贸n: {{ ticket.updatedAt|date('d/m/Y H:i') }}">
                                                <i class="bi bi-arrow-repeat"></i> {{ ticket.updatedAt|date('d/m/Y') }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </td>
                                <td class="actions-column">
                                    <div class="d-flex flex-column gap-1">
                                        <div class="d-flex gap-1">
                                            <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn btn-sm btn-outline-primary flex-grow-1" data-bs-toggle="tooltip" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('ticket_editar', {'id': ticket.id}) }}" class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="Editar ticket">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            {% set pendingTasks = ticket.tasks|filter(t => not t.completed)|length %}
                                            <a href="{{ path('ticket_show', {'id': ticket.id, '_fragment': 'tasks'}) }}"
                                               class="btn btn-sm btn-{{ pendingTasks > 0 ? 'warning' : 'outline-secondary' }} position-relative"
                                               data-bs-toggle="tooltip"
                                               title="{{ pendingTasks > 0 ? pendingTasks ~ ' tarea(s) pendiente(s)' : 'Ver tareas' }}">
                                                <i class="bi bi-list-check"></i>
                                                {% if pendingTasks > 0 %}
                                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                        {{ pendingTasks }}
                                                        <span class="visually-hidden">tareas pendientes</span>
                                                    </span>
                                                {% endif %}
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                        <h5>No tienes tickets creados</h5>
                                        <p class="mb-3">Comienza creando tu primer ticket para gestionar tus solicitudes</p>
                                        <a href="{{ path('ticket_nuevo') }}" class="btn btn-primary">
                                            <i class="bi bi-plus-lg me-1"></i> Crear Primer Ticket
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    {% if totalPages > 1 %}
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-body">
            <nav aria-label="Paginaci贸n del historial">
                <ul class="pagination justify-content-center mb-0">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('ticket_historial_usuario', {'page': currentPage - 1}) }}">
                                <i class="bi bi-chevron-left"></i> Anterior
                            </a>
                        </li>
                    {% endif %}

                    {% for page in range(max(1, currentPage - 2), min(totalPages, currentPage + 2)) %}
                        <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('ticket_historial_usuario', {'page': page}) }}">
                                {{ page }}
                            </a>
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('ticket_historial_usuario', {'page': currentPage + 1}) }}">
                                Siguiente <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
    {% endif %}
</div>

<style>
/* Estilos para el estado de los tickets */
.status-badge {
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    border-radius: 50rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
}

.status-badge.bg-warning {
    background-color: #ffc107 !important;
    color: #000 !important;
}

.status-badge.bg-info {
    background-color: #0dcaf0 !important;
    color: #000 !important;
}

.status-badge.bg-success {
    background-color: #198754 !important;
    color: #fff !important;
}

.status-badge.bg-danger {
    background-color: #dc3545 !important;
    color: #fff !important;
}

/* Estilos para el select de estado */
.status-select-container {
    min-width: 120px;
}

.status-select-container .form-select {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
}

/* Mejoras para la tabla */
.table th {
    background-color: #f8f9fa;
    border-bottom: 2px solid #dee2e6;
    font-weight: 600;
    color: #495057;
}

.table td {
    vertical-align: middle;
    border-bottom: 1px solid #e9ecef;
}

.table tbody tr:hover {
    background-color: rgba(13, 110, 253, 0.05);
}

/* Estilos para los badges de departamento */
.department-badge {
    font-size: 0.75rem;
    padding: 0.5rem 0.75rem;
    border-radius: 50rem;
    background-color: #f8f9fa;
    color: #495057;
    border: 1px solid #dee2e6;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    max-width: 200px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.department-badge i {
    flex-shrink: 0;
}

/* Estilos para el dashboard */
.display-6 {
    font-size: 2.5rem;
    font-weight: 300;
    line-height: 1.2;
}

/* Estilos para los enlaces de ordenamiento */
.table th a {
    color: #495057;
    text-decoration: none;
    transition: color 0.2s ease;
}

.table th a:hover {
    color: #0d6efd;
}

/* Estilos para la paginaci贸n */
.pagination .page-link {
    color: #0d6efd;
    border-color: #dee2e6;
}

.pagination .page-item.active .page-link {
    background-color: #0d6efd;
    border-color: #0d6efd;
}

.pagination .page-link:hover {
    color: #0a58ca;
    background-color: #e9ecef;
    border-color: #dee2e6;
}
</style>

<script>
// Inicializar tooltips
document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});

// Atajo de teclado para filtros
document.addEventListener('keydown', function(e) {
    if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
        e.preventDefault();
        document.getElementById('filtrosPanel').classList.toggle('show');
    }
});
</script>
{% endblock %} 