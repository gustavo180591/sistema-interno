    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Elements
        const modalEl = document.getElementById('assignTicketModal');
        const assignForm = document.getElementById('assignTicketForm');
        const repeater = document.getElementById('assignedUsersHiddenRepeater');
        const assignedContainer = document.getElementById('assignedUsersContainer');
        const userSearchInput = document.getElementById('userSearch');
        const userList = document.getElementById('userList');

        // Handle user search
        if (userSearchInput) {
            userSearchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                const userItems = userList.querySelectorAll('.user-item');

                userItems.forEach(item => {
                    const userName = item.textContent.toLowerCase();
                    item.style.display = userName.includes(searchTerm) ? '' : 'none';
                });
            });
        }

        // Handle form submission for user assignment
        if (assignForm) {
            assignForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const checked = modalEl.querySelectorAll('input[name="assigned_users[]"]:checked');

                // Clear previous hidden inputs
                repeater.innerHTML = '';
                const badges = [];
                const selectedUsers = new Set();

                // Process selected users
                checked.forEach(cb => {
                    const id = cb.value;
                    // Get the user item and extract both first and last name
                    const userItem = cb.closest('.list-group-item');
                    let fullName = `Usuario ${id}`;

                    if (userItem) {
                        const nameElement = userItem.querySelector('.fw-bold');
                        if (nameElement) {
                            fullName = nameElement.textContent.trim();
                        }
                    }

                    // Add hidden input for form submission
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    // Get the full name from data attribute or use default
                    const hiddenName = repeater.dataset.fullName
                        ? repeater.dataset.fullName + '[]'
                        : 'ticket[assignedUsers][]';
                    input.name = hiddenName;
                    input.value = id;
                    repeater.appendChild(input);

                    // Create badge HTML
                    if (!selectedUsers.has(id)) {
                        selectedUsers.add(id);
                        badges.push(`
                            <span class="badge bg-primary d-flex align-items-center me-1 mb-1" data-user-id="${id}">
                                ${fullName}
                                <button type="button" class="btn-close btn-close-white btn-sm ms-2"
                                        style="font-size:.5rem"
                                        data-remove-user="${id}"
                                        title="Quitar usuario"></button>
                            </span>
                        `);
                    }
                });

                // Update UI with selected users
                updateAssignedUsersUI(badges);

                // Close modal and show success message
                const modal = bootstrap.Modal.getInstance(modalEl);
                if (modal) modal.hide();

                showSuccessToast(checked.length);

                // Reset search
                if (userSearchInput) userSearchInput.value = '';
                if (userList) {
                    userList.querySelectorAll('.user-item').forEach(item => {
                        item.style.display = '';
                    });
                }
            });
        }

        // Update the assigned users display
        function updateAssignedUsersUI(badges) {
            if (!assignedContainer) return;

            if (badges.length) {
                assignedContainer.innerHTML = `
                    <div class="assigned-users mb-2">
                        <span class="small text-muted d-block mb-1">Usuarios asignados:</span>
                        <div class="d-flex flex-wrap gap-2">
                            ${badges.join('')}
                        </div>
                    </div>`;

                // Add event listeners to remove buttons
                assignedContainer.querySelectorAll('[data-remove-user]').forEach(btn => {
                    btn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        const userId = this.getAttribute('data-remove-user');

                        // Remove corresponding hidden input
                        const inputs = repeater.querySelectorAll('input[value="' + userId + '"]');
                        inputs.forEach(input => input.remove());

                        // Uncheck in modal
                        const checkbox = modalEl.querySelector(`input[type="checkbox"][value="${userId}"]`);
                        if (checkbox) checkbox.checked = false;

                        // Remove badge
                        this.closest('.badge')?.remove();

                        // Update UI if no more users
                        if (!assignedContainer.querySelector('.badge')) {
                            assignedContainer.innerHTML = '';
                        }
                    });
                });
            } else {
                assignedContainer.innerHTML = '';
            }
        }

        // Show success toast
        function showSuccessToast(count) {
            const toastEl = document.getElementById('toastAssignmentSuccess');
            if (!toastEl) return;

            const countSpan = toastEl.querySelector('#assignedUsersCount');
            if (countSpan) countSpan.textContent = count;

            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }
    });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // State management
            const state = {
                users: [],
                selectedUsers: new Map(),
                searchTerm: ''
            };

            // DOM elements
            const elements = {
                userList: document.getElementById('userList'),
                userSearch: document.getElementById('userSearch'),
                assignForm: document.getElementById('assignTicketForm'),
                assignedUsersList: document.getElementById('assignedUsersList'),
                assignBtn: document.getElementById('assignUsersBtn')
            };

            // Initialize the application
            async function init() {
                setupEventListeners();
                await loadUsers();
                loadAssignedUsers();
            }

            // Set up event listeners
            function setupEventListeners() {
                // Search functionality
                if (elements.userSearch) {
                    elements.userSearch.addEventListener('input', (e) => {
                        state.searchTerm = e.target.value.toLowerCase();
                        renderUsers();
                    });
                }

                // Form submission
                if (elements.assignForm) {
                    elements.assignForm.addEventListener('submit', handleFormSubmit);
                }

                // Modal events
                const modal = document.getElementById('assignTicketModal');
                if (modal) {
                    modal.addEventListener('show.bs.modal', () => {
                        state.searchTerm = '';
                        if (elements.userSearch) elements.userSearch.value = '';
                        renderUsers();
                    });
                }
            }

            // Load users from the server
            async function loadUsers() {
                try {
                    showLoading(true);
                    const response = await fetch('{{ path("user_list") }}', {
                        method: 'GET',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        credentials: 'same-origin' // Important for sending cookies/session
                    });

                    if (!response.ok) {
                        if (response.status === 403 || response.status === 401) {
                            throw new Error('No tiene permisos para ver la lista de usuarios');
                        }
                        throw new Error('No se pudo cargar la lista de usuarios');
                    }

                    const data = await response.json();

                    if (data.success && Array.isArray(data.users)) {
                        state.users = data.users;
                        renderUsers();
                    } else {
                        throw new Error('Formato de respuesta inválido');
                    }
