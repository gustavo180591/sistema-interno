                        // Add change handler for the checkbox
                        userItem.find('.user-checkbox').on('change', function() {
                            const userId = $(this).val();
                            const userItem = $(this).closest('.user-item');

                            if ($(this).is(':checked')) {
                                selectedUsers.add(userId);
                                userItem.addClass('bg-light');
