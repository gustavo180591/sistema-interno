{% extends 'base.html.twig' %}

{% block title %}Nuevo Ticket - Sistema Interno{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0">
                            <i class="fas fa-ticket-alt me-2"></i>Nuevo Ticket
                        </h1>
                        <div>
                            <span class="badge bg-white text-primary fs-6">
                                <i class="fas fa-hashtag me-1"></i>
                                <span id="ticket-id">Nuevo</span>
                            </span>
                        </div>
                    </div>
                </div>

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="card-body">
                    <div class="row g-3">
                        <!-- ID Externo -->
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.idSistemaInterno, 'ID Externo', {'label_attr': {
                                    'class': 'form-label fw-bold text-muted small mb-1'
                                }}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="fas fa-external-link-alt text-muted"></i>
                                    </span>
                                    {{ form_widget(form.idSistemaInterno, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Ingrese el ID externo',
                                            'aria-describedby': 'idExternoHelp'
                                        }
                                    }) }}
                                </div>
                                <small id="idExternoHelp" class="form-text text-muted">
                                    Referencia externa del ticket
                                </small>
                            </div>
                        </div>

                        <!-- Área de Origen -->
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.areaOrigen, 'Área de Origen', {'label_attr': {
                                    'class': 'form-label fw-bold text-muted small mb-1'
                                }}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="fas fa-building text-muted"></i>
                                    </span>
                                    {{ form_widget(form.areaOrigen, {
                                        'attr': {
                                            'class': 'form-select',
                                            'aria-label': 'Seleccione un área de origen'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>

                        <!-- Ticket -->
                        <div class="col-12">
                            <div class="form-group">
                                {{ form_label(form.title, 'Ticket', {'label_attr': {
                                    'class': 'form-label fw-bold text-muted small mb-1'
                                }}) }}
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="fas fa-heading text-muted"></i>
                                    </span>
                                    {{ form_widget(form.title, {
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Ingrese un título descriptivo',
                                            'autofocus': 'autofocus'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>

                        <!-- Observación -->
                        <div class="col-12">
                            <div class="form-group">
                                {{ form_label(form.description, 'Descripción', {'label_attr': {
                                    'class': 'form-label fw-bold text-muted small mb-1'
                                }}) }}
                                {{ form_widget(form.description, {
                                    'attr': {
                                        'class': 'form-control',
                                        'rows': '4',
                                        'placeholder': 'Describa el problema o solicitud en detalle...'
                                    }
                                }) }}
                            </div>
                        </div>

                        <!-- Información Adicional -->
                        <div class="col-12">
                            <div class="d-flex flex-wrap justify-content-between align-items-center text-muted small">
                                <div class="me-3 mb-2">
                                    <i class="far fa-clock me-1"></i>
                                    <span id="fecha-actual">{{ 'now'|date('d/m/Y H:i', 'America/Argentina/Buenos_Aires') }}</span>
                                </div>
                                <div class="mb-2">
                                    <span class="badge bg-primary">
                                        <i class="far fa-clock me-1"></i>Nuevo
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if form.formAssignedUsers is defined %}
                    <div class="mt-4 pt-3 border-top">
                        <h6 class="text-muted mb-3"><i class="fas fa-user-shield me-2"></i>Asignación</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.formAssignedUsers, 'Asignar a', {'label_attr': {
                                        'class': 'form-label fw-bold text-muted small mb-1'
                                    }}) }}
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-user-tie text-muted"></i>
                                        </span>
                                        {{ form_widget(form.formAssignedUsers, {
                                            'attr': {
                                                'class': 'form-select',
                                                'style': 'max-width: 300px;'
                                            }
                                        }) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('ticket_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver al listado
                        </a>
                        <div>
                            <button type="reset" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-undo me-1"></i> Limpiar
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-1"></i> Crear Ticket
                            </button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Update current time every second
            function updateCurrentTime() {
                const now = new Date();
                const options = {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    hour12: false,
                    timeZone: 'America/Argentina/Buenos_Aires'
                };
                const formatter = new Intl.DateTimeFormat('es-AR', options);
                document.getElementById('fecha-actual').textContent = formatter.format(now);
            }

            // Update time immediately and then every minute
            updateCurrentTime();
            setInterval(updateCurrentTime, 60000);

            // Client-side form validation
            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);

                // Auto-resize textarea
                const textarea = form.querySelector('textarea');
                if (textarea) {
                    textarea.addEventListener('input', function() {
                        this.style.height = 'auto';
                        this.style.height = (this.scrollHeight) + 'px';
                    });
                }
            });

            // Focus on the title field when the page loads
            const titleField = document.querySelector('input[name*="[title]"]');
            if (titleField) {
                titleField.focus();
            }
        });
    </script>
{% endblock %}
