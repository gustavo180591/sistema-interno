{% extends 'base.html.twig' %}

{% block title %}Editar Ticket #{{ '%04d'|format(ticket.idSistemaInterno) }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary: #0d6efd;
            --primary-light: #e7f1ff;
            --secondary: #6c757d;
            --success: #198754;
            --info: #0dcaf0;
            --warning: #ffc107;
            --danger: #dc3545;
            --light: #f8f9fa;
            --dark: #212529;
        }
        
        body {
            background-color: #f5f7fb;
        }
        
        .ticket-header {
            background: #fff;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.05);
            border-left: 4px solid var(--primary);
        }
        
        .card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.05);
            transition: transform 0.2s, box-shadow 0.2s;
            margin-bottom: 1.5rem;
            background: #fff;
            border-top: 3px solid var(--primary);
        }
        
        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            background-color: #fff;
            border-bottom: 1px solid rgba(0,0,0,.05);
            padding: 1.25rem 1.5rem;
            border-top-left-radius: 0.5rem !important;
            border-top-right-radius: 0.5rem !important;
        }
        
        .card-body {
            padding: 1.5rem;
        }
        
        .section-title {
            color: var(--primary);
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.1rem;
            position: relative;
            padding-bottom: 0.5rem;
        }
        
        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--primary);
            border-radius: 3px;
        }
        
        .section-title i {
            color: var(--primary);
            width: 24px;
            text-align: center;
        }
        
        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6c757d;
        }
        
        .form-control, .form-select, .form-control:focus, .form-select:focus {
            border-radius: 0.375rem;
            padding: 0.6rem 0.9rem;
            border: 1px solid #e0e0e0;
            background-color: #f8f9fa;
            transition: all 0.2s;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
            background-color: #fff;
        }
        
        .btn {
            border-radius: 0.375rem;
            padding: 0.6rem 1.25rem;
            font-weight: 500;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }
        
        .btn i {
            font-size: 0.9em;
        }
        
        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
        }
        
        .btn-outline-secondary {
            border-color: #dee2e6;
        }
        
        .action-buttons {
            background: #f8f9fa;
            padding: 1.25rem;
            border-radius: 0.5rem;
            margin-top: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid rgba(0,0,0,0.05);
        }
        
        .status-badge {
            padding: 0.35em 0.65em;
            font-size: 0.85em;
            font-weight: 500;
            border-radius: 0.25rem;
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
        }
        
        .status-pending {
            background-color: #e7f5ff;
            color: #1c7ed6;
        }
        
        .status-in_progress {
            background-color: #fff3bf;
            color: #f08c00;
        }
        
        .status-completed {
            background-color: #ebfbee;
            color: #2f9e44;
        }
        
        .status-rejected {
            background-color: #fff5f5;
            color: #f03e3e;
        }
        
        .status-delayed {
            background-color: #fff9db;
            color: #e67700;
        }
        
        .form-section {
            background: #fff;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(0,0,0,0.05);
        }
        
        .form-section h5 {
            color: var(--primary);
            font-weight: 600;
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .form-section h5 i {
            width: 24px;
            text-align: center;
        }
        
        .ticket-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .meta-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }
        
        .meta-label {
            font-size: 0.8rem;
            color: #6c757d;
            font-weight: 500;
        }
        
        .meta-value {
            font-weight: 500;
            color: #212529;
        }
        
        @media (max-width: 768px) {
            .ticket-header {
                padding: 1.25rem;
            }
            
            .card-body {
                padding: 1.25rem;
            }
            
            .action-buttons {
                flex-direction: column;
                gap: 1rem;
            }
            
            .action-buttons > div {
                width: 100%;
                display: flex;
                flex-direction: column;
                gap: 0.75rem;
            }
            
            .btn {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <!-- Header Section -->
    <div class="ticket-header">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <div class="mb-3 mb-md-0">
                <div class="d-flex align-items-center flex-wrap gap-2 mb-2">
                    <i class="fas fa-ticket-alt fa-2x text-primary"></i>
                    <h1 class="h4 mb-0">
                        Editar Ticket #{{ '%04d'|format(ticket.idSistemaInterno) }}
                        <span class="ms-2 status-badge status-{{ ticket.status }}">
                            <i class="fas fa-circle"></i>
                            {{ ticket.status|trans }}
                        </span>
                    </h1>
                </div>
                <div class="ticket-meta">
                    <div class="meta-item">
                        <span class="meta-label"><i class="far fa-calendar-alt me-1"></i> Creado</span>
                        <span class="meta-value">{{ ticket.createdAt|date('d/m/Y H:i') }}</span>
                    </div>
                    {% if ticket.updatedAt and ticket.updatedAt != ticket.createdAt %}
                    <div class="meta-item">
                        <span class="meta-label"><i class="fas fa-sync-alt me-1"></i> Actualizado</span>
                        <span class="meta-value">{{ ticket.updatedAt|date('d/m/Y H:i') }}</span>
                    </div>
                    {% endif %}
                    <div class="meta-item">
                        <span class="meta-label"><i class="fas fa-user-tag me-1"></i> Creado por</span>
                        <span class="meta-value">{{ ticket.createdBy ? ticket.createdBy.username : 'Sistema' }}</span>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn btn-outline-secondary">
                    <i class="fas fa-eye"></i> Ver Detalles
                </a>
                <a href="{{ path('ticket_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="form-section">
                        <h5><i class="fas fa-info-circle"></i> Información Básica</h5>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-4">
                                    {{ form_label(form.title, 'Título del Ticket', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.title, {'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Ingrese un título descriptivo'
                                    }}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-4">
                                    {{ form_label(form.status, 'Estado Actual', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.status, {'attr': {
                                        'class': 'form-select',
                                        'data-style': 'btn-select'
                                    }}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.status) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.description, 'Descripción Detallada', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {
                                'class': 'form-control',
                                'rows': 5,
                                'placeholder': 'Describa el problema o solicitud con el mayor detalle posible...'
                            }}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>

                    {% if form.ticketAssignments is defined %}
                    <div class="form-section">
                        <h5><i class="fas fa-users"></i> Asignación</h5>
                        
                        <div class="mb-4">
                            {{ form_label(form.ticketAssignments, 'Usuarios Asignados', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.ticketAssignments, {'attr': {
                                'class': 'form-select',
                                'data-placeholder': 'Seleccione uno o más usuarios...',
                                'multiple': 'multiple'
                            }}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.ticketAssignments) }}
                            </div>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i> Mantén presionada la tecla Ctrl (o Cmd en Mac) para seleccionar múltiples usuarios.
                            </small>
                        </div>
                    </div>
                    {% endif %}

                    <div class="action-buttons">
                        <div>
                            <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Cancelar
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Sidebar with ticket info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Información del Ticket
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="mb-1 text-muted small">Creado por</p>
                        <p class="mb-0">
                            {% if ticket.createdBy %}
                                {% if ticket.createdBy.nombre and ticket.createdBy.apellido %}
                                    {{ ticket.createdBy.nombre }} {{ ticket.createdBy.apellido }}
                                    <small class="text-muted d-block">{{ ticket.createdBy.email }}</small>
                                {% else %}
                                    {{ ticket.createdBy.email }}
                                {% endif %}
                            {% else %}
                                Sistema
                            {% endif %}
                        </p>
                    </div>
                    <div class="mb-3">
                        <p class="mb-1 text-muted small">Fecha de creación</p>
                        <p class="mb-0">{{ ticket.createdAt|date('d/m/Y H:i') }}</p>
                    </div>
                    {% if ticket.updatedAt and ticket.updatedAt != ticket.createdAt %}
                    <div class="mb-3">
                        <p class="mb-1 text-muted small">Última actualización</p>
                        <p class="mb-0">{{ ticket.updatedAt|date('d/m/Y H:i') }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        // Enable Bootstrap form validation
        (function () {
            'use strict'
            
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')
            
            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
        
        // Initialize Select2 for multiple select
        $(document).ready(function() {
            $('select[multiple]').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: $(this).data('placeholder'),
                closeOnSelect: false
            });
            
            // Improve select2 styling to match our theme
            $('.select2-selection').addClass('form-control');
            $('.select2-container--bootstrap-5 .select2-selection--multiple').css('min-height', '38px');
        });
    </script>
{% endblock %}
