{% extends 'base.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h5 mb-0">
                            <i class="bi bi-person-gear me-2"></i>Editar Usuario: {{ user.nombre }} {{ user.apellido }}
                        </h1>
                        <a href="{{ path('admin_user_index') }}" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.nombre, {
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'placeholder': 'Ej: Juan'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.apellido, {
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'placeholder': 'Ej: Pérez'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.email, {
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'placeholder': 'usuario@ejemplo.com'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.username, {
                                    'label': 'Nombre de usuario',
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'placeholder': 'juan.perez'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'}
                                }) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.plainPassword, {
                                    'label': 'Contraseña',
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'autocomplete': 'new-password',
                                        'placeholder': '••••••'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'},
                                    'help': 'Dejar en blanco para mantener la contraseña actual',
                                    'help_attr': {'class': 'form-text text-muted small'}
                                }) }}
                            </div>
                            <div class="form-section">
                                <h3 class="form-section-title">
                                    <i class="bi bi-shield-lock me-2"></i>Permisos y Roles
                                </h3>
                                <div class="mb-3">
                                    <div class="p-3 bg-light rounded">
                                        <p class="text-muted mb-3">Selecciona los roles que tendrá este usuario en el sistema:</p>
                                        <div class="row g-3">
                                            {% for choice in form.roles.vars.choices %}
                                                {% set role = choice.data %}
                                                <div class="col-md-6">
                                                    <div class="form-check">
                                                        <input type="checkbox" 
                                                               id="{{ form.roles.vars.id }}_{{ loop.index0 }}" 
                                                               name="{{ form.roles.vars.full_name }}[]" 
                                                               value="{{ choice.value }}" 
                                                               class="form-check-input"
                                                               data-role-name="{{ choice.value }}"
                                                               {% if choice.value in form.roles.vars.value %}checked{% endif %}>
                                                        <label class="form-check-label fw-medium d-flex align-items-center" for="{{ form.roles.vars.id }}_{{ loop.index0 }}">
                                                            <span class="me-2">{{ choice.label|split(' (', 2)[0] }}</span>
                                                            <span class="badge bg-secondary">{{ choice.value }}</span>
                                                        </label>
                                                        {% if choice.attr.description is defined %}
                                                            <div class="form-text text-muted small ms-4">{{ choice.attr.description }}</div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        {{ form_errors(form.roles) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    {{ form_widget(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

