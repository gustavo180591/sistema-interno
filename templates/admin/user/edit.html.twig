{% extends 'base.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h5 mb-0">
                            <i class="bi bi-person-gear me-2"></i>Editar Usuario: {{ user.nombre }} {{ user.apellido }}
                        </h1>
                        <a href="{{ path('admin_user_index') }}" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.nombre, {
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'placeholder': 'Ej: Juan'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.apellido, {
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'placeholder': 'Ej: Pérez'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.email, {
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'placeholder': 'usuario@ejemplo.com'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'}
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.username, {
                                    'label': 'Nombre de usuario',
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'placeholder': 'juan.perez'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'}
                                }) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.plainPassword, {
                                    'label': 'Contraseña',
                                    'attr': {
                                        'class': 'form-control-lg',
                                        'autocomplete': 'new-password',
                                        'placeholder': '••••••'
                                    },
                                    'row_attr': {'class': 'form-floating mb-3'},
                                    'help': 'Dejar en blanco para mantener la contraseña actual',
                                    'help_attr': {'class': 'form-text text-muted small'}
                                }) }}
                            </div>
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Roles *</label>
                                    <div class="border rounded p-3">
                                        {% for role in form.roles.vars.choices %}
                                            <div class="form-check form-check-inline">
                                                <input type="checkbox" 
                                                       id="{{ form.roles.vars.id }}_{{ loop.index0 }}" 
                                                       name="{{ form.roles.vars.full_name }}[]" 
                                                       value="{{ role.value }}" 
                                                       class="form-check-input {{ form.roles.vars.valid ? '' : 'is-invalid' }}" 
                                                       {% if role.value in form.roles.vars.value or (form.roles.vars.value is empty and role.value == 'ROLE_USER') %}checked="checked"{% endif %}
                                                       {% if form.roles.vars.required %}required{% endif %}>
                                                <label class="form-check-label me-3" for="{{ form.roles.vars.id }}_{{ loop.index0 }}">
                                                    {{ role.label }}
                                                </label>
                                            </div>
                                        {% endfor %}
                                        {% if form.roles.vars.help is defined and form.roles.vars.help %}
                                            <div class="form-text text-muted mt-2">{{ form.roles.vars.help }}</div>
                                        {% endif %}
                                        <div class="invalid-feedback d-block">
                                            {{ form_errors(form.roles) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

