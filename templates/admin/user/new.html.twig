{% extends 'base.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h4 mb-0">Crear Nuevo Usuario</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.nombre, {
                                        'label': 'Nombre',
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.apellido, {
                                        'label': 'Apellido',
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_row(form.email, {
                                    'label': 'Email',
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_row(form.username, {
                                    'label': 'Nombre de usuario',
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_row(form.plainPassword, {
                                    'label': 'Contrase√±a',
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.roles, 'Roles') }}
                                <div class="form-check">
                                    {% for child in form.roles %}
                                        <div class="form-check">
                                            {{ form_widget(child, {
                                                'attr': {'class': 'form-check-input'}
                                            }) }}
                                            {{ form_label(child, null, {
                                                'label_attr': {'class': 'form-check-label'}
                                            }) }}
                                        </div>
                                    {% endfor %}
                                    {{ form_errors(form.roles) }}
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_admin_user_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Volver
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Guardar
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
