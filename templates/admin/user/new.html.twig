{% extends 'base.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="h4 mb-0">Crear Nuevo Usuario</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.nombre) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.apellido) }}
                            </div>
                        </div>
                        {{ form_row(form.email) }}
                        {{ form_row(form.plainPassword) }}
                        
                        <div class="form-group mb-3">
                            <label class="form-label">Roles</label>
                            <div class="form-check">
                                <input type="checkbox" id="admin_role" name="roles[]" value="ROLE_ADMIN" class="form-check-input">
                                <label for="admin_role" class="form-check-label">Administrador</label>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Ensure at least one role is selected
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const checkboxes = form.querySelectorAll('input[type="checkbox"][name^="roles"]:checked');
                if (checkboxes.length === 0) {
                    e.preventDefault();
                    alert('Por favor seleccione al menos un rol para el usuario.');
                }
            });
        });
    </script>
{% endblock %}
