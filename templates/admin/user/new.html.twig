{% extends 'admin/base_form.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0">
                            <i class="bi bi-person-plus me-2"></i>Nuevo Usuario
                        </h1>
                        <a href="{{ path('admin_user_index') }}" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-arrow-left me-1"></i> Volver al listado
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="form-section">
                            <h3 class="form-section-title">
                                <i class="bi bi-person-badge me-2"></i>Información Personal
                            </h3>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    {{ form_row(form.nombre, {
                                        'attr': {
                                            'class': 'form-control-lg',
                                            'placeholder': 'Ej: Juan'
                                        },
                                        'row_attr': {'class': 'form-floating mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.apellido, {
                                        'attr': {
                                            'class': 'form-control-lg',
                                            'placeholder': 'Ej: Pérez'
                                        },
                                        'row_attr': {'class': 'form-floating mb-3'}
                                    }) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-section">
                            <h3 class="form-section-title">
                                <i class="bi bi-person-lock me-2"></i>Credenciales de Acceso
                            </h3>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    {{ form_row(form.email, {
                                        'attr': {
                                            'class': 'form-control-lg',
                                            'placeholder': 'usuario@ejemplo.com'
                                        },
                                        'row_attr': {'class': 'form-floating mb-3'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.username, {
                                        'label': 'Nombre de usuario',
                                        'attr': {
                                            'class': 'form-control-lg',
                                            'placeholder': 'juan.perez'
                                        },
                                        'row_attr': {'class': 'form-floating mb-3'}
                                    }) }}
                                </div>
                                <div class="col-12">
                                    {{ form_row(form.plainPassword, {
                                        'label': 'Contraseña',
                                        'attr': {
                                            'class': 'form-control-lg',
                                            'autocomplete': 'new-password',
                                            'placeholder': '••••••'
                                        },
                                        'row_attr': {'class': 'form-floating mb-3'},
                                        'help': 'Mínimo 6 caracteres. Incluye mayúsculas, minúsculas y números.'
                                    }) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-section">
                            <h3 class="form-section-title">
                                <i class="bi bi-shield-lock me-2"></i>Permisos y Roles
                            </h3>
                            <div class="mb-3">
                                <div class="p-3 bg-light rounded">
                                    <p class="text-muted mb-3">Selecciona los roles que tendrá este usuario en el sistema:</p>
                                    <div class="row g-3">
                                        {% for choice in form.roles.vars.choices %}
                                            {% set role = choice.data %}
                                            <div class="col-md-6">
                                                <div class="form-check">
                                                    <input type="checkbox" 
                                                           id="{{ form.roles.vars.id }}_{{ loop.index0 }}" 
                                                           name="{{ form.roles.vars.full_name }}[]" 
                                                           value="{{ choice.value }}" 
                                                           class="form-check-input"
                                                           data-role-name="{{ choice.value }}"
                                                           {% if choice.value in form.roles.vars.value %}checked{% endif %}>
                                                    <label class="form-check-label fw-medium d-flex align-items-center" for="{{ form.roles.vars.id }}_{{ loop.index0 }}">
                                                        <span class="me-2">{{ choice.label|split(' (', 2)[0] }}</span>
                                                        <span class="badge bg-secondary">{{ choice.value }}</span>
                                                    </label>
                                                    {% if choice.attr.description is defined %}
                                                        <div class="form-text text-muted small ms-4">{{ choice.attr.description }}</div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    {{ form_errors(form.roles) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mt-5 pt-3 border-top">
                            <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-lg me-2"></i>Guardar Usuario
                            </button>
                        </div>
                    {{ form_widget(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Ensure at least one role is selected
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const checkboxes = form.querySelectorAll('input[name="user[roles][]"]:checked');
                if (checkboxes.length === 0) {
                    e.preventDefault();
                    alert('Por favor seleccione al menos un rol para el usuario.');
                }
            });
        });
    </script>
{% endblock %}
