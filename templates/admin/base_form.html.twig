{# Base template for admin forms #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Form floating labels */
        .form-floating > label {
            padding: 1rem 0.75rem;
        }
        
        /* Form controls */
        .form-control, .form-select, .form-control-lg, .form-select-lg {
            padding: 1rem 0.75rem;
            height: calc(3.5rem + 2px);
            border-radius: 0.5rem;
            border: 1px solid #dee2e6;
            transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        
        /* Checkboxes and radio buttons */
        .form-check {
            margin-bottom: 0.5rem;
            padding-left: 2.5em;
        }
        
        .form-check-input {
            width: 1.2em;
            height: 1.2em;
            margin-top: 0.2em;
            margin-left: -2.5em;
        }
        
        .form-check-label {
            padding-left: 0.5em;
            margin-bottom: 0.2em;
            cursor: pointer;
        }
        
        /* Card styling */
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            border-radius: 0.75rem;
            overflow: hidden;
            margin-bottom: 2rem;
        }
        
        .card-header {
            padding: 1.25rem 1.5rem;
            background-color: #435ebe;
            border-bottom: none;
        }
        
        .card-header h1 {
            font-weight: 600;
            margin: 0;
        }
        
        .card-body {
            padding: 2rem;
        }
        
        /* Form sections */
        .form-section {
            background: #f8f9fa;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .form-section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #495057;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #dee2e6;
        }
        
        /* Buttons */
        .btn-primary {
            background-color: #435ebe;
            border: none;
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            transition: all 0.2s;
        }
        
        .btn-primary:hover {
            background-color: #3a52a5;
            transform: translateY(-1px);
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .card-body {
                padding: 1.25rem;
            }
            
            .form-section {
                padding: 1rem;
            }
        }
    </style>
{% endblock %}
