<div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th class="ps-4">Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th class="text-end pe-4">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for area in areas %}
            <tr>
                <td class="ps-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-diagram-3 text-primary"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-medium">{{ area.nombre }}</h6>
                            <small class="text-muted">ID: {{ area.id }}</small>
                        </div>
                    </div>
                </td>
                <td>
                    {% if area.descripcion %}
                        <span class="text-truncate d-inline-block" style="max-width: 250px;" title="{{ area.descripcion }}">
                            {{ area.descripcion|length > 50 ? area.descripcion|slice(0, 50) ~ '...' : area.descripcion }}
                        </span>
                    {% else %}
                        <span class="text-muted fst-italic">Sin descripción</span>
                    {% endif %}
                </td>
                <td>
                    <span class="badge border border-{{ area.activo ? 'success' : 'danger' }} bg-white text-{{ area.activo ? 'success' : 'danger' }} px-3">
                        <i class="bi bi-{{ area.activo ? 'check' : 'x' }}-circle me-1"></i>{{ area.activo ? 'Activo' : 'Inactivo' }}
                    </span>
                </td>
                <td class="text-end pe-4">
                    <div class="btn-group" role="group">
                        <a href="{{ path('admin_area_edit', {'id': area.id}) }}" 
                           class="btn btn-sm btn-outline-primary rounded-start"
                           data-bs-toggle="tooltip" 
                           title="Editar">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <button type="button" 
                                class="btn btn-sm btn-outline-danger"
                                data-bs-toggle="modal" 
                                data-bs-target="#deleteModal{{ area.id }}"
                                title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal{{ area.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Confirmar eliminación</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    ¿Está seguro que desea eliminar el área "{{ area.nombre }}"?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <form action="{{ path('admin_area_delete', {'id': area.id}) }}" method="post" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ area.id) }}">
                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center p-5">
                    <div class="text-center py-4">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-search text-muted" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="mb-2">No se encontraron áreas</h5>
                        <p class="text-muted mb-0">
                            {% if search or estado is not null %}
                                Intenta con otros términos de búsqueda o <a href="{{ path('admin_area_index') }}">limpiar los filtros</a>.
                            {% else %}
                                No hay áreas registradas. <a href="{{ path('admin_area_new') }}">Crea una nueva área</a> para comenzar.
                            {% endif %}
                        </p>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<!-- Initialize tooltips after AJAX load -->
<script>
    // Re-initialize tooltips after AJAX load
    document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(tooltipTriggerEl => {
        new bootstrap.Tooltip(tooltipTriggerEl);
    });
</script>
