{% extends 'base.html.twig' %}

{% block title %}Editar Área de Origen{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div class="mb-3 mb-md-0">
            <h1 class="h3 mb-2">
                <i class="bi bi-diagram-3 me-2"></i>Editar Área: {{ area.nombre }}
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_area_index') }}">Áreas de Origen</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="{{ path('admin_area_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Volver al listado
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            {{ form_label(form.nombre, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-text">Ingrese el nombre del área de origen.</div>
                            {{ form_errors(form.nombre) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.descripcion, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.descripcion, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                            <div class="form-text">Descripción opcional del área de origen.</div>
                            {{ form_errors(form.descripcion) }}
                        </div>
                        <div class="mb-3 form-check form-switch">
                            {{ form_widget(form.activo, {'attr': {'class': 'form-check-input'}, 'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_label(form.activo, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            <div class="form-text">Desactive esta opción para ocultar el área sin eliminarla.</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">Información del Área</h6>
                                <ul class="list-unstyled small">
                                    <li class="mb-2">
                                        <i class="bi bi-calendar3 me-2 text-muted"></i>
                                        <span class="text-muted">Creado:</span>
                                        <span class="float-end">{{ area.fechaCreacion|date('d/m/Y H:i') }}</span>
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-ticket-detailed me-2 text-muted"></i>
                                        <span class="text-muted">Tickets:</span>
                                        <span class="float-end">{{ area.tickets|length }}</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save me-2"></i>Guardar cambios
                    </button>
                    <a href="{{ path('admin_area_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg me-2"></i>Cancelar
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
