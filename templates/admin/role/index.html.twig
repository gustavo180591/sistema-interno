{% extends 'base.html.twig' %}

{% block title %}Gestión de Roles{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <!-- Header with Stats -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div class="mb-3 mb-md-0">
            <h1 class="h3 mb-2">
                <i class="bi bi-shield-lock me-2"></i>Gestión de Roles
            </h1>
            <p class="text-muted mb-0">Administra los roles y permisos del sistema</p>
        </div>
        <div>
            <a href="{{ path('admin_role_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Rol
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Total de Roles</h6>
                            <h3 class="mb-0">{{ roles|length }}</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-shield-lock fs-4 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Roles Activos</h6>
                            <h3 class="mb-0">{{ roles|length }}</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-3">
                            <i class="bi bi-check-circle fs-4 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0">Lista de Roles</h5>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchInput" class="form-control" placeholder="Buscar roles por nombre o identificador...">
                        <button class="btn btn-outline-secondary" type="button" id="filterButton">
                            <i class="bi bi-funnel"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Rol</th>
                            <th>Identificador</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for role in roles %}
                        <tr class="role-row">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-shield-lock text-primary"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-medium">{{ role.name }}</h6>
                                        <div class="text-muted small">
                                            <span class="d-inline-flex align-items-center">
                                                <i class="bi bi-calendar3 me-1"></i>
                                                {{ role.createdAt ? role.createdAt|date('d/m/Y') : 'N/A' }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">
                                <div class="d-flex align-items-center">
                                    <div class="d-flex flex-column">
                                        <code class="text-nowrap font-monospace">{{ role.roleName }}</code>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_role_edit', {'id': role.id}) }}" 
                                       class="btn btn-sm btn-outline-primary rounded-start"
                                       data-bs-toggle="tooltip" 
                                       title="Editar rol">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-secondary"
                                            data-bs-toggle="tooltip"
                                            title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-danger rounded-end"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal{{ role.id }}"
                                            title="Eliminar rol">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                
                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal{{ role.id }}" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirmar eliminación</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>¿Estás seguro de que deseas eliminar el rol <strong>{{ role.name }}</strong>?</p>
                                                {% if role.users|length > 0 %}
                                                    <div class="alert alert-warning">
                                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                                        Este rol está asignado a {{ role.users|length }} usuario(s). Al eliminarlo, estos usuarios perderán este rol.
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <form method="post" action="{{ path('admin_role_delete', {'id': role.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash me-1"></i> Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center p-5">
                                <div class="text-center py-4">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                        <i class="bi bi-shield-lock text-muted" style="font-size: 2rem;"></i>
                                    </div>
                                    <h4 class="text-muted mb-2">No hay roles registrados</h4>
                                    <p class="text-muted mb-4">Crea tu primer rol para comenzar a gestionar los permisos del sistema</p>
                                    <a href="{{ path('admin_role_new') }}" class="btn btn-primary">
                                        <i class="bi bi-plus-circle me-2"></i> Crear mi primer rol
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% if roles|length > 5 %}
        <div class="card-footer bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Mostrando <strong>{{ roles|length }}</strong> de <strong>{{ roles|length }}</strong> roles
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Siguiente</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        {% endif %}
    </div>
</div>

{% block javascripts %}
{{ parent() }}
<script>
// Initialize tooltips when document is ready
document.addEventListener('DOMContentLoaded', function() {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.forEach(function(tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });

// Enhanced search functionality
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const roleRows = document.querySelectorAll('.role-row');
    
    if (searchInput) {
        searchInput.addEventListener('input', function(e) {
            const searchTerm = e.target.value.trim().toLowerCase();
            
            roleRows.forEach(row => {
                const roleName = row.querySelector('h6')?.textContent?.toLowerCase() || '';
                const roleIdentifier = row.querySelector('.badge')?.textContent?.toLowerCase() || '';
                const isVisible = roleName.includes(searchTerm) || roleIdentifier.includes(searchTerm);
                row.style.display = isVisible ? '' : 'none';
            });
        });
    }

    // Add animation to table rows
    document.querySelectorAll('.role-row').forEach((row, index) => {
        row.style.opacity = '0';
        row.style.transform = 'translateY(10px)';
        row.style.transition = 'opacity 0.3s ease-out, transform 0.3s ease-out';
        row.style.transitionDelay = (index * 0.05) + 's';
        
        // Trigger reflow
        void row.offsetWidth;
        
        // Animate in
        row.style.opacity = '1';
        row.style.transform = 'translateY(0)';
    });
});
}); // Close the DOMContentLoaded event
</script>

<style>
/* Custom styles */
.card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: 1px solid rgba(0,0,0,0.05);
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
}

.role-row {
    transition: background-color 0.2s ease;
}

.role-row:hover {
    background-color: rgba(0, 0, 0, 0.02);
}

.badge {
    font-weight: 500;
    letter-spacing: 0.3px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .btn-group .btn span {
        display: none;
    }
    
    .btn-group .btn i {
        margin-right: 0 !important;
    }
}
</style>
{% endblock %}

{% endblock %}
