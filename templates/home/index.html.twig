{% extends 'base.html.twig' %}

{% block title %}Inicio - Sistema Interno{% endblock %}

{% block body %}
<div class="container">
    {% if is_granted('ROLE_USER') %}
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm mt-4">
                    <div class="card-body text-center py-4">
                        <h1 class="display-5 mb-3">Bienvenido/a, {{ app.user.nombre ? app.user.nombre : app.user.email }}</h1>
                        <p class="lead text-muted mb-0">Aquí puedes ver los tickets que tienes asignados</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h2 class="h5 mb-0"><i class="fas fa-ticket-alt me-2"></i>Tus Tickets Asignados</h2>
                    </div>
                    <div class="card-body p-0">
                        {% if tickets|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="ps-4">Título</th>
                                            <th class="text-center">Estado</th>
                                            <th class="text-nowrap">Fecha de creación</th>
                                            <th class="text-end pe-4">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody class="border-top-0">
                                        {% for ticket in tickets %}
                                            <tr class="border-bottom">
                                                <td class="ps-4">
                                                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="text-decoration-none fw-medium text-dark" title="{{ ticket.title }}">
                                                        <i class="fas fa-ticket-alt me-2 text-primary"></i>
                                                        {{ ticket.title|length > 40 ? ticket.title|slice(0, 40) ~ '...' : ticket.title }}
                                                    </a>
                                                    {% if ticket.dueDate and ticket.dueDate|date('Y-m-d') < 'now'|date('Y-m-d') %}
                                                        <span class="badge bg-danger ms-2">Vencido</span>
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge rounded-pill px-3 py-2 bg-{{ 
                                                        ticket.status == 'nuevo' ? 'primary' : 
                                                        (ticket.status == 'en_progreso' ? 'warning' : 
                                                        (ticket.status == 'completado' ? 'success' : 'secondary')) 
                                                    }}">
                                                        <i class="fas {{ 
                                                            ticket.status == 'nuevo' ? 'fa-plus-circle' : 
                                                            (ticket.status == 'en_progreso' ? 'fa-spinner fa-spin' : 
                                                            (ticket.status == 'completado' ? 'fa-check-circle' : 'fa-question-circle')) 
                                                        }} me-1"></i>
                                                        {{ ticket.status|replace({'_': ' '})|title }}
                                                    </span>
                                                </td>
                                                <td class="text-nowrap">
                                                    <i class="far fa-calendar-alt text-muted me-1"></i>
                                                    {{ ticket.createdAt|date('d/m/Y H:i') }}
                                                </td>
                                                <td class="text-end pe-4">
                                                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i> Ver detalles
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="p-5 text-center">
                                <div class="mb-4">
                                    <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
                                    <h3 class="h4 text-muted mb-3">No tienes tickets asignados</h3>
                                    <p class="text-muted mb-4">Cuando te asignen un ticket, aparecerá aquí para que puedas verlo y gestionarlo.</p>
                                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_AUDITOR') %}
                                        <a href="{{ path('ticket_new') }}" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>Crear nuevo ticket
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="card shadow-sm my-5">
                    <div class="card-body p-5">
                        <h1 class="display-4 mb-4">{{ welcome_message }}</h1>
                        <p class="lead">
                            Bienvenido al sistema de gestión interna. Seleccione una opción del menú para comenzar.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
