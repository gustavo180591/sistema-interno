{% extends 'base.html.twig' %}

{% block title %}Inicio - Sistema Interno{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/apexcharts@3.35.0/dist/apexcharts.min.css">
    <style>
        .welcome-card {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            border: none;
            border-radius: 12px;
            color: white;
        }
        .ticket-card {
            transition: transform 0.2s, box-shadow 0.2s;
            border: 1px solid rgba(0,0,0,0.05);
        }
        .ticket-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1) !important;
        }
        .status-badge {
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.35em 0.65em;
            border-radius: 0.375rem;
        }
        .quick-actions .btn {
            border-radius: 8px;
            padding: 0.75rem 1.25rem;
            transition: all 0.2s;
        }
        .quick-actions .btn i {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4">
    {% if is_granted('ROLE_USER') %}
        <!-- Welcome Card -->
        <div class="card welcome-card mb-4 border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="h3 mb-2">¡Hola, {{ app.user.nombre ? app.user.nombre : app.user.email|split('@')|first }}!</h1>
                        <p class="mb-0 opacity-75">Bienvenido de nuevo al panel de control</p>
                    </div>
                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_AUDITOR') %}
                            <a href="{{ path('ticket_new') }}" class="btn btn-light btn-lg">
                                <i class="fas fa-plus me-2"></i>Nuevo Ticket
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="row g-3 text-center quick-actions">
                            <div class="col-6 col-md-3">
                                <a href="{{ path('ticket_index') }}" class="btn btn-light w-100 h-100 d-flex flex-column align-items-center justify-content-center py-3">
                                    <i class="fas fa-ticket-alt text-primary mb-2"></i>
                                    <span>Ver todos los tickets</span>
                                </a>
                            </div>
                            <div class="col-6 col-md-3">
                                <a href="{{ path('ticket_index') }}?status=nuevo" class="btn btn-light w-100 h-100 d-flex flex-column align-items-center justify-content-center py-3">
                                    <i class="fas fa-inbox text-info mb-2"></i>
                                    <span>Tickets nuevos</span>
                                </a>
                            </div>
                            <div class="col-6 col-md-3">
                                <a href="{{ path('ticket_index') }}?status=en_progreso" class="btn btn-light w-100 h-100 d-flex flex-column align-items-center justify-content-center py-3">
                                    <i class="fas fa-spinner fa-spin text-warning mb-2"></i>
                                    <span>En progreso</span>
                                </a>
                            </div>
                            <div class="col-6 col-md-3">
                                <a href="{{ path('ticket_index') }}?status=completado" class="btn btn-light w-100 h-100 d-flex flex-column align-items-center justify-content-center py-3">
                                    <i class="fas fa-check-circle text-success mb-2"></i>
                                    <span>Completados</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Tickets -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fas fa-ticket-alt me-2 text-primary"></i>Tus Tickets Recientes</h5>
                            <a href="{{ path('ticket_index') }}" class="btn btn-sm btn-outline-primary">
                                Ver todos <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        {% if tickets|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="ps-4">Título</th>
                                            <th class="text-center">Estado</th>
                                            <th class="text-nowrap">Fecha</th>
                                            <th class="text-end pe-4">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for ticket in tickets|slice(0, 5) %}
                                            <tr class="border-bottom">
                                                <td class="ps-4">
                                                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="text-decoration-none text-dark d-flex align-items-center" title="{{ ticket.title }}">
                                                        <div class="me-3">
                                                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                                <i class="fas fa-ticket-alt text-{{ 
                                                                    ticket.status == 'nuevo' ? 'primary' : 
                                                                    (ticket.status == 'en_progreso' ? 'warning' : 
                                                                    (ticket.status == 'completado' ? 'success' : 'secondary')) 
                                                                }}"></i>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <div class="fw-medium">{{ ticket.title|length > 30 ? ticket.title|slice(0, 30) ~ '...' : ticket.title }}</div>
                                                            <small class="text-muted">#{{ ticket.id }}</small>
                                                        </div>
                                                    </a>
                                                </td>
                                                <td class="text-center">
                                                    <span class="status-badge bg-{{ 
                                                        ticket.status == 'nuevo' ? 'primary' : 
                                                        (ticket.status == 'en_progreso' ? 'warning' : 
                                                        (ticket.status == 'completado' ? 'success' : 'secondary')) 
                                                    }}">
                                                        {{ ticket.status|replace({'_': ' '})|title }}
                                                    </span>
                                                    {% if ticket.dueDate and ticket.dueDate|date('Y-m-d') < 'now'|date('Y-m-d') and ticket.status != 'completado' %}
                                                        <span class="badge bg-danger ms-1">Vencido</span>
                                                    {% endif %}
                                                </td>
                                                <td class="text-nowrap">
                                                    <small class="text-muted">{{ ticket.createdAt|date('d/m/Y') }}</small>
                                                    {% if ticket.dueDate %}
                                                        <div class="small text-{{ ticket.dueDate|date('Y-m-d') < 'now'|date('Y-m-d') ? 'danger' : 'muted' }}">
                                                            <i class="far fa-clock me-1"></i> Vence {{ ticket.dueDate|date('d/m/Y') }}
                                                        </div>
                                                    {% endif %}
                                                </td>
                                                <td class="text-end pe-4">
                                                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}" class="btn btn-sm btn-outline-primary rounded-pill px-3" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="text-center p-5">
                                <div class="mb-4">
                                    <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
                                    <h3 class="h4 text-muted mb-3">No tienes tickets asignados</h3>
                                    <p class="text-muted mb-4">Cuando te asignen un ticket, aparecerá aquí para que puedas verlo y gestionarlo.</p>
                                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_AUDITOR') %}
                                        <a href="{{ path('ticket_new') }}" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>Crear primer ticket
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <!-- Login/Register View -->
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-lg-8 col-xl-6">
                <div class="text-center mb-5">
                    <div class="mb-4">
                        <i class="fas fa-ticket-alt fa-4x text-primary"></i>
                    </div>
                    <h1 class="display-5 fw-bold text-primary mb-3">Sistema de Gestión Interna</h1>
                    <p class="lead text-muted mb-4">Solución integral para la gestión de tickets y tareas del equipo</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg px-4">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar sesión
                        </a>
                    </div>
                </div>
                <div class="card shadow-sm border-0 overflow-hidden">
                    <div class="row g-0">
                        <div class="col-md-6 d-none d-md-block bg-primary bg-opacity-10 p-4">
                            <h4 class="h5 mb-3">Beneficios</h4>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Gestión centralizada</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Seguimiento en tiempo real</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Notificaciones automáticas</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Reportes detallados</li>
                            </ul>
                        </div>
                        <div class="col-md-6 p-4">
                            <h4 class="h5 mb-4 text-center">{{ welcome_message }}</h4>
                            <p class="text-center text-muted mb-4">
                                Ingresa con tus credenciales o contacta al administrador para obtener acceso al sistema.
                            </p>
                            <div class="text-center mt-4">
                                <a href="{{ path('app_login') }}" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-user-lock me-2"></i>Acceder al sistema
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
